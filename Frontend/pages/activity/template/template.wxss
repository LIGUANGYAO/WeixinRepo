.activity {
  margin-top: 20rpx;
  background-color: white;
  width: 100%;
  height: 302rpx;
  border-bottom: 2rpx solid #f4f4f4;
}

.activity-bar {
  padding-left: 30rpx;
  padding-top: 15rpx;
  height: 67rpx;
  border-bottom: solid 3rpx #f4f4f4;
  font-size: 26rpx;
  font-family: "PingFangSC-Semibold";
}

.activity-status {
  float: right;
  padding-right: 30rpx;
}

.activity-detail {
  height: 234rpx;
  border-bottom: solid 3rpx #f4f4f4;
  padding-top: 20rpx;
  padding-left: 30rpx;
}

.activity-picture {
  float: left;
  width: 100rpx;
  height: 100rpx;
}

.activity-role {
  margin-left: 20rpx;
  display: inline-block;
}

.activity-name {
  font-size: 32rpx;
}

.activity-role-text {
  margin-left: 24rpx;
  border: solid 3rpx #e6b53c;
  text-align: center;
  border-radius: 10rpx;
  color: #e6b53c;
  font-size: 24rpx;
}

.activity-content {
  height: 36rpx;
  font-size: 26rpx;
  margin-left: 120rpx;
  font-family: "PingFangSC-Regular";
}

.activity-content image {
  vertical-align: bottom;
}

.activity-type {
  width: 32rpx;
  height: 32rpx;
}

.activity-limit {
  width: 34rpx;
  height: 34rpx;
  padding-left: 30rpx;
}

.activity-cost {
  width: 32rpx;
  height: 36rpx;
  padding-left: 30rpx;
}

.activity-time {
  margin-top: 20rpx;
  display: block;
  font-size: 26rpx;
  font-family: "PingFangSC-Regular";
}

.activity-address {
  font-size: 26rpx;
  font-family: "PingFangSC-Regular";
}

.activity-endline {
}

.activity-favourite-text {
  float: right;
  margin-right: 30rpx;
  margin-top: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #472e00;
  letter-spacing: 0.47rpx;
}

.activity-favourite-image {
  float: right;
  margin-top: 20rpx;
  margin-right: 20rpx;
  width: 29rpx;
  height: 24rpx;
}
