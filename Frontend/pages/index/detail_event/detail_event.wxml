<!-- User Activity Detail Viewer -->
<view class="container">
  <view class="personal-img-wrapper">
    <image class="personal-event-img" src="{{event.pic}}" />
  </view>
  <view class="event-info">
    <view class="event-type-info">
      <text class="event-type">{{event.eventName}}</text>
      <text class="event-status">{{eventState[event.state]}}</text>
    </view>
    <view class='detail-info'>
      <image src='../../../image/my_bee_category@2x.png'></image>
      <text>{{eventType[event.type]}}</text>
      <image src='../../../image/my_bee_number@2x.png'></image>
      <text>{{register_amount}}人</text>
      <image src='../../../image/my_bee_m@2x.png'></image>
      <text>{{event.cost}}元/人</text>
    </view>
    <block wx:if="{{event.rating>0}}">
      <image class="favor_star" src='../../../image/good_s@2x.png'></image>
    </block>
    <block wx:else>
      <image class="favor_star" src='../../../image/good_n@2x.png'></image>
    </block>
    <text class='favor_text'>1</text>
    <view class="act_date">
      <view>时间 | {{event.start_time+'-'+event.end_time}}</view>
    </view>
    <view class="temp-fonts">地址 |{{event.address1+event.address2+event.address3+event.address4}}</view>
  </view>
  <view class='place-info'>
    <view class='place-info-view'>
      <text class='place-info-text'>场馆名称：{{event.site_name}}</text>
    </view>
    <view class='place-info-view'>
      <text class='place-info-text'>馆主姓名：{{event.name}}</text>
    </view>
    <view class='place-info-view'>
      <text class='place-info-text'>人数上限：不超过{{event.limit}}人</text>
    </view>
  </view>
  <view class='introduce'>
    <view class='introduce-view'>
      <text class='introduce-border'>活动简介</text>
    </view>
    <view style='width: 100%;'>
      <view class='introduce-detail'>{{event.comment}}</view>
    </view>
  </view>
  <view class='applicant-view'>
    <view class='applicant-title'>
      <text class='applicant-title-text'>已报名人（{{register_amount}}人）</text>
    </view>
    <view class='applicant-each-view' wx:for="{{booking}}">
      <image class="applicant-image" src="{{item.avatar}}"></image>
      <text class='applicant-name'>{{item.name}}</text>
    </view>
  </view>
  <view class='btn-footer'>
    <block wx:if="{{event.role==1}}">
      <button bindtap="btn_Clicked_Gym_Info" id="{{event.boss_id}}" class='btn-gym-info'>查看场馆</button>
      <button bindtap="btn_Clicked_Personal_Input" id="{{event.id}}" disabled="{{is_disabled}}" class='btn-final-participate'>{{btn_text}}</button>
    </block>
    <block wx:else>
      <button class='btn-personal-participate'>{{btn_text}}</button>
    </block>
  </view>
</view>