  margin: 0rpx auto 10rpx auto;
}

.bar-item-sel {
  width: 60rpx;
  height: 60rpx;
  margin: 0rpx auto 20rpx auto;
  padding-bottom: 10rpx;
  border-bottom: 3rpx solid white;
}
