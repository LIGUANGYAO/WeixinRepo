  height: 31rpx;
  top: 27rpx;
  left: 565rpx;
}

.cur-sel-kind {
  position: absolute;
  z-index: 10rpx;
  top: 14rpx;
  left: 652rpx;
  width: 68rpx;
  height: 68rpx;
}

.sport-kind-bar {
  position: absolute;
  z-index: 10;
  top: 25rpx;
  left: 648rpx;
  width: 76rpx;
  height: 1000rpx;
  padding-top: 31rpx;
  border-radius: 38rpx;
  background-color: rgba(0, 0, 0, 0.27);
  box-shadow: 0 0 4rpx 0 rgba(0, 0, 0, 0.27);
  transition: height 2s;
}

.bar-item {
  width: 60rpx;
  height: 60rpx;
  margin: 0rpx auto 20rpx auto;
}

.bar-updown {
  width: 60rpx;
