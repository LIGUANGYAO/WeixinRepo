  z-index: 2;
}

.news-image {
  position: absolute;
  z-index: 10;
  left: 30rpx;
  top: 14rpx;
  width: 68rpx;
  height: 68rpx;
}

.search-box {
  position: absolute;
  z-index: 10;
  top: 14rpx;
  left: 128rpx;
  width: 480rpx;
  line-height: 60rpx;
  opacity: 0.8;
  background: #fff;
  border-radius: 6rpx;
