.container {
  height: auto;
}

.swiper_box {
  width: 100vw;
  height: 380rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.focus-event-info {
  width: 100%;
  height: 250rpx;
  background-color: white;
}

.focus-event-place-info {
  width: 100%;
  height: 50rpx;
  padding-top: 26rpx;
}

.focus-event-place {
  padding-left: 30rpx;
