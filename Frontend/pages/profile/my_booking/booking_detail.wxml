      <label class="personal-name-label">真实姓名: 朴</label>
    </view>
    <view class="personal-phone">
      <label class="personal-phone-label">联系方式：154155121202</label>
    </view>
  </view>
  <view class='introduce'>
    <view class='introduce-view'>
      <text class='introduce-border'>活动简介</text>
    </view>
    <view class="cls_score_title_bar">
      <text class="cls_score_title">评分：</text>
      <view class = "cls-score-star-view1" wx:for="{{[1, 2, 3, 4, 5]}}">
        <view class = "cls-score-star-view2" wx:if="{{item <= count_yellowStar}}">
          <image class="cls_score_star" src="{{img_yellow_start_src}}"/>
        </view>
        <view class = "cls-score-star-view2" wx:else>
          <image class="cls_score_star" src="{{img_black_start_src}}"/>
        </view>
      </view>
    </view>
    <view style='width: 100%; height:380rpx'>
      <view class='introduce-detail'> zvzxcvzxcvzxvzxcvzxcvasdfasdfasdfsadfzxcvasdf</view>
    </view>
