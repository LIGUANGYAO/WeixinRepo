<view>
  <block wx:for="{{favourite}}" wx:key="index" wx:item="{{item}}">
  <view class="reg_cls_user_comment_info" id="{{index}}" bindtap="btn_Clicked_Focus">
    <image class="reg_cls_user_photo" src="{{item.avatar}}" mode="aspectFill"> </image>
    <view>
      <text class="reg_cls_city_name">{{item.site_name}}</text>
    </view>
    <text class="reg_member_place">地址｜{{item.province+item.city+item.area+item.detail_address}}</text>
    <text class="reg_cls_comment_number">电话｜{{item.phone}}</text>
    <button class="reg_cls_clear_btn" id="index" bindtap="on_cancel">取消关注</button>
  </view>
  </block>
  <view wx:if="{{favourite.length == 0}}">
    <image class='no-focus-image' src='../../../image/success_n@3x.png'></image>
    <view class='no-focus-text'>您还未关注场馆！</view>
  </view>
</view>