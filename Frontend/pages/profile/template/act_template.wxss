.activity {
  margin-top: 20rpx;
  background-color: white;
  width: 100%;
  height: 240rpx;
  border-bottom: 2rpx solid #f4f4f4;
}

.activity-detail {
  height: 234rpx;
  padding-top: 20rpx;
  padding-left: 30rpx;
}

.activity-picture {
  float: left;
  width: 100rpx;
  height: 100rpx;
}

.activity-role {
  margin-left: 20rpx;
  display: inline;
}

.activity-name {
  font-size: 32rpx;
}

.activity-role-text {
  margin-left: 24rpx;
  border: solid 3rpx #e6b53c;
  text-align: center;
  border-radius: 10rpx;
  color: #e6b53c;
  font-size: 24rpx;
}

.activity-status {
  padding-left: 240rpx;
  font-family: PingFangSC-Semibold;
  font-size: 26rpx;
  color: #333;
  letter-spacing: 0.56rpx;
}

.activity-content {
  line-height: 37rpx;
  font-size: 26rpx;
  margin-top: 19rpx;
  margin-left: 120rpx;
  font-family: "PingFangSC-Regular";
}

.activity-content image {
  vertical-align: middle;
}
.activity-content text{
  margin-left: 9rpx;
}

.activity-type {
  width: 32rpx;
  height: 32rpx;
}

.activity-limit {
  width: 34rpx;
  height: 34rpx;
  padding-left: 30rpx;
}

.activity-cost {
  width: 32rpx;
  height: 36rpx;
  padding-left: 30rpx;
}

.activity-time {
  margin-top: 20rpx;
  display: block;
  font-size: 26rpx;
  font-family: "PingFangSC-Regular";
}

.activity-address {
  margin-top: 10rpx;
  font-size: 26rpx;
  font-family: "PingFangSC-Regular";
}
