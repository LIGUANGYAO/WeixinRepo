.activity {
  margin-top: 20rpx;
  background-color: white;
  width: 100%;
  height: 302rpx;
  border-bottom: 2rpx solid #f4f4f4;
}

.activity-bar {
  padding-left: 30rpx;
  padding-top: 15rpx;
  height: 52rpx;
  border-bottom: solid 3rpx #f4f4f4;
  font-size: 26rpx;
  font-family: "PingFangSC-Semibold";
}

.activity-status {
  float: right;
  padding-right: 30rpx;
}

.activity-detail {
  height: 234rpx;
  border-bottom: solid 3rpx #f4f4f4;
  padding-top: 20rpx;
  padding-left: 30rpx;
}

.activity-picture {
  float: left;
  width: 100rpx;
  height: 100rpx;
}
.activity-role{
  margin-left: 20rpx;
  display: inline-block;
}
.activity-name {
  font-size: 32rpx;
}

.activity-role-text{
  margin-left: 24rpx; 
  border: solid 3rpx #E6B53C;
  text-align: center;
  border-radius: 10rpx;
  color: #E6B53C;
  font-size: 24rpx;
}


.activity-content {
  height: 36rpx;
  font-size: 26rpx;
  margin-left: 120rpx;
  margin-top: 18rpx;
  font-family: "PingFangSC-Regular";
}

.activity-content image {
  vertical-align: bottom;
}

.activity-type {
  width: 32rpx;
  height: 32rpx;
}

.activity-limit {
  width: 34rpx;
  height: 34rpx;
  padding-left: 30rpx;
}

.activity-cost {
  width: 32rpx;
  height: 36rpx;
  padding-left: 30rpx;
}

.activity-time {
  margin-top: 20rpx;
  display: block;
  font-size: 26rpx;
  font-family: "PingFangSC-Regular";
}

.activity-address {
  margin-top: 10rpx;
  font-size: 26rpx;
  font-family: "PingFangSC-Regular";
}