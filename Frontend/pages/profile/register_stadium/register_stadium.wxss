  color: #333;
  letter-spacing: 0.64rpx;
  padding-bottom: 32rpx;
  border-bottom: 3rpx solid #f4f4f4;
}

.stadium-descript-textarea {
  width: 690rpx;
  height: 227rpx;
  margin-top: 31rpx;
  padding-left: 20rpx;
  background: #f2f2f2;
  border-radius: 8rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #888;
  letter-spacing: 1.04rpx;
  line-height: 50rpx;
}

