.container {
  background-color: white;
}

.stadium-avatar-view {
  height: 116rpx;
  width: calc(100% - 30rpx);
  padding-left: 30rpx;
  padding-top: 19rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333;
  letter-spacing: 0.64rpx;
  border-bottom: 3rpx solid #f4f4f4;
}

.stadium-avatar-text {
  display: inline-block;
  margin-top: 29rpx;
}

.stadium-avatar-image {
  float: right;
  margin-right: 45rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: dashed 5rpx #f4f4f4;
}

.stadium-image-next {
  float: right;
  padding-top: 37rpx;
  margin-right: 30rpx;
  width: 15rpx;
  height: 26rpx;
}

.stadium-descript-view {
