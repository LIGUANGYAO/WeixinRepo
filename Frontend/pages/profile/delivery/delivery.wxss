/* pages/profile/delivery/delivery.wxss */

.postman {
  width: 100%;
  height: 220rpx;
  border-bottom: 20rpx solid #f4f4f4;
}

.postman-info {
  width: calc(100%-30rpx);
  height: 120rpx;
  padding-left: 30rpx;
  border-bottom: solid 3rpx #f4f4f4;
}

.postman-text {
  padding-top: 23rpx;
  font-family: PingFangSC-Semibold;
  font-size: 30rpx;
  color: #333;
  letter-spacing: 0.64rpx;
}

.postman-phonenumber {
  float: right;
  margin-right: 25rpx;
}

.postman-address {
  padding-top: 17rpx;
  display: block;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #333;
  letter-spacing: 0.51rpx;
}

.postman-operation {
  width: calc(100%-30rpx);
  height: 80rpx;
  padding-left: 30rpx;
  line-height: 80rpx;
}

.postman-mainaddress {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}

.postman-operation text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333;
  letter-spacing: 0.6rpx;
  padding-left: 10rpx;
  vertical-align: middle;
}

.postman-cancel {
  float: right;
  width: 100rpx;
  height: 50rpx;
  margin-right: 20rpx;
  margin-top: 25rpx;
  border: solid 3rpx #979797;
  border-radius: 10rpx;
  color: #979797;
  background-color: white;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  letter-spacing: 0.51rpx;
  line-height: 40rpx;
}

.postman-edit {
  float: right;
  width: 100rpx;
  height: 50rpx;
  margin-top: 25rpx;
  margin-right: 30rpx;
  border-radius: 10rpx;
  background-color: white;
  border: solid 3rpx #e6b53c;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #e6b53c;
  letter-spacing: 0.51rpx;
  line-height: 40rpx;
}

.btn-submit {
  position: fixed;
  width: 100%;
  height: 98rpx;
  bottom: 0rpx;
  background-color: #e6b53c;
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #fff;
  letter-spacing: 1.54rpx;
  border-radius: 0;
}

.edit_panel {
  position: fixed;
}
