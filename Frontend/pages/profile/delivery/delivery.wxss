/* pages/profile/delivery/delivery.wxss */

.postman {
  width: 100%;
  height: 220rpx;
}

.postman-info {
  width: calc(100%-30rpx);
  height: 113rpx;
  padding-left: 30rpx;
  border-bottom: solid 3rpx #f4f4f4;
}

.postman-text {
  margin-top: 23rpx;
  font-family: PingFangSC-Semibold;
  font-size: 30rpx;
  color: #333;
  letter-spacing: 0.64rpx;
}

.postman-phonenumber {
  float: right;
  margin-right: 25rpx;
}

.postman-address {
  margin-top: 17rpx;
  display: block;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #333;
  letter-spacing: 0.51rpx;
}

.postman-operation {
  width: calc(100%-30rpx);
  height: 80rpx;
  padding-left: 30rpx;
}

.postman-mainaddress {
  margin-top: 17rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333;
  letter-spacing: 0.6rpx;
}

.postman-cancel {
  display: inline-block;
  float: right;
  margin-right: 20rpx;
  margin-top: 17rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #979797;
  background-color: white;
  border-color: #979797;
  letter-spacing: 0.51px;
}

.postman-edit {
  display: inline-block;
  float: right;
  margin-top: 17rpx;
  margin-right: 30rpx;
  background-color: white;
  border-color: #e6b53c;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #e6b53c;
  letter-spacing: 0.51rpx;
}

.btn-submit {
  width: 100%;
  height: 98rpx;
  background-color: #e6b53c;
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #fff;
  letter-spacing: 1.54rpx;
  border-radius: 0;
}
.edit_panel
{
  position: fixed;
}