/* pages/profile/auth/auth.wxss */

.container {
  background-color: white;
}

.auth-state {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  background-color: #f4f4f4;
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 1.54rpx;
  text-align: center;
}
.auth-scroll-view
{
  position: fixed;
  top: 98rpx;
  left: 0;
  bottom: 88rpx;
  width: 100%;
  height:  auto;
}
auth-scroll-view1{
    position: fixed;
  top: 98rpx;
  left: 0;
  bottom: 0rpx;
  width: 100%;
  height:  auto;
}
.auth-text {
  width: calc(100%-33rpx);
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333;
  letter-spacing: 0.64rpx;
  border-bottom: solid 3rpx #f4f4f4;
}

.auth-text-auto {
  width: calc(100%-33rpx);
  height: auto;
  min-height: 88rpx;
  word-break: break-all;
  overflow: visible;
  padding-left: 30rpx;
  line-height: 88rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333;
  letter-spacing: 0.64rpx;
  border-bottom: solid 3rpx #f4f4f4;
}
.text-auto1{
  display: inline-block;
  line-height: 100%;
}
.text-auto2{
  vertical-align: middle;
  display: inline-block;
  width: auto;
  height: auto;
  word-break: break-all;
}
.auth-image-view {
  width: calc(100%-33rpx);
  height: 310;
  padding-left: 30rpx;
  border-bottom: solid 3rpx #f4f4f4;
}

.auth-image-text {
  margin-top: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333;
  letter-spacing: 2.08rpx;
}

.auth-image
{
  width: 330rpx;
  height: 207rpx;
  margin-top: 20rpx;
}
.submit-btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  background-color: #E6B53C;
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #fff;
  letter-spacing: 1.54rpx;
}