.product-image {
  width: 100%;
  height: 380rpx;
}

.product-detail {
  width: auto;
  height: 150rpx;
  background-color: white;
  padding-left: 30rpx;
}

.product-name {
  padding-top: 26rpx;
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #333;
  letter-spacing: 0.68rpx;
}

.prodcut-cost {
  margin-top: 21rpx;
  line-height: 32rpx;
}

.product-cost-image {
  width: 27rpx;
  height: 32rpx;
  vertical-align: middle;
}

.product-cost-text {
  margin-left: 12rpx;
  display: inline-block;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #333;
  letter-spacing: 0.28rpx;
}

.prodcut-cost-text text {
  vertical-align: middle;
}

.product-type {
  float: right;
  margin-right: 31rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #888;
  letter-spacing: 0.56rpx;
}

.product-explain {
  padding-left: 30rpx;
  margin-top: 20rpx;
  width: auto;
  height: 610rpx;
  background-color: white;
}

.product-explain-header {
  width: 100%;
  height: 88rpx;
  padding-top: 23rpx;
  font-family: PingFangSC-Semibold;
  font-size: 30rpx;
  color: #333;
  letter-spacing: 0.64rpx;
}

.product-explain-header text {
  border-left: solid 8rpx #e6b53c;
  padding-left: 12rpx;
}

.product-explain-view {
  margin-top: 14rpx;
  margin-right: 37rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333;
  letter-spacing: 1.04rpx;
  line-height: 50rpx;
}

.btn_submit {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  background-color: #e6b53c;
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #fff;
  letter-spacing: 1.54rpx;
}
