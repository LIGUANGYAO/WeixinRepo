/* pages/other/create_event/create_event.wxss */
.container{
  background-color: white;
}
.create-event-container {
  width: 100%;
  background-color: white;
}

.event-view {
  padding-left: 30rpx;
  line-height: 88rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333;
  letter-spacing: 0.64rpx;
  border-bottom: solid 3rpx #f4f4f4;
}

.event-input {
  display: inline-block;
  vertical-align: middle;
  margin-left: 10rpx;
  width: 65%;
}

.event-next-image {
  float: right;
  margin-right: 30rpx;
  width: 15rpx;
  height: 26rpx;
  padding-top: 32rpx;
}

.event-left-text {
  float: right;
  text-align: right;
  margin-right: 30rpx;
}

.event-selimage-view {
  height: 310rpx;
  line-height: 88rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333;
  letter-spacing: 2.08rpx;
  padding-left: 30rpx;
  border-bottom: solid 3rpx #f4f4f4;
}

.event-selimage-image {
  display: block;
  width: 330rpx;
  height: 207rpx;
}

.event-comment-view {
  height: 386rpx;
  line-height: 88rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333;
  letter-spacing: 0.64rpx;
  padding-left: 30rpx;
  border-bottom: solid 3rpx #f4f4f4;
}

.event-comment-textarea {
  width: 690rpx;
  height: 226rpx;
  background: #f2f2f2;
  border-radius: 8rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #888;
  letter-spacing: 1.04rpx;
  padding-bottom: 32rpx;
  line-height: 50rpx;
  z-index: 1
}

.event-private-group {
  display: inline-block;
}

.event-private-group radio {
  margin-left: 40rpx;
  transform: scale(0.6)
}
.btn-cancel{
  width: 50%;
  height: 98rpx;
  line-height: 98rpx;
  background-color: white;
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #e6b53c;
  letter-spacing: 1.54rpx;
  display: inline-block;
  overflow: visible;
}
.btn_submit {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  background-color: #e6b53c;
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #fff;
  letter-spacing: 1.54rpx;
  display: inline-block;
  overflow: visible;
}

.event-add-radiogroup radio {
  margin-left: 40rpx;
  transform: scale(0.6);
}

.display_show {
  display: block;
  border: 1px solid;
  border-color: beige;
  padding: 10px;
}

.display_none {
  display: none;
}

.stadiumaddress-input {
  margin-left: 30rpx;
  width: 500rpx;
  vertical-align: middle;
  display: inline-block;
  font-family: PingFangSC-Semibold;
  overflow: visible;
}

.stadiumaddress-input picker {
  font-size: 25rpx;
  vertical-align: middle;
  height: 60rpx;
  line-height: 60rpx;
  border: solid 3rpx #f4f4f4;
  display: inline-block;
  margin-right: 10rpx;
}

.user-role {
  width: 100%;
  line-height: 85rpx;
  border-bottom: solid 3rpx #f4f4f4;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333;
  letter-spacing: 0.64rpx;
}

.user-role-text {
  line-height: 85rpx;
  float: left;
  margin-left: 30rpx;
  width: auto;
}

.user-role-select {
  vertical-align: top;
  line-height: 85rpx;
  margin-left: 30rpx;
  width: 450rpx;
  display: inline-block;
  font-family: PingFangSC-Semibold;
  overflow: visible;
}

.user-role-select picker {
  font-size: 30rpx;
  vertical-align: middle;
  line-height: 88rpx;
  display: inline-block;
  margin-right: 20rpx;
}

