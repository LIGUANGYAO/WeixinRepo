<!--index.wxml-->
<view>
  <view class="cls_title">
    <text class="cls_all_comments">全部评论10人)</text>
  </view>
  <view wx:for="{{comment_array}}" class="cls_user_comment_info">
    <image class="cls_user_photo" src="{{item.user_photo_src}}" mode="aspectFill"> </image>
    <view class='name-star-view'>
      <text class="cls_user_name">{{item.comment_user_name}}</text>
      <view class="stars" wx:for="{{[1, 2, 3, 4, 5]}}" wx:for-index="idx" wx:for-item="itm">
        <view wx:if="{{idx >= item.count_yellowStar - 1}}">
          <image id="{{idx}}" class="cls_user_comment_star" bindtap="additionStar" src="{{img_yellow_start_src}}" mode="aspectFill" style='right:{{star_img_position + idx*37}}rpx' />
        </view>
        <view wx:else>
          <image id="{{idx}}" class="cls_user_comment_star" bindtap="substractStar" src="{{img_black_start_src}}" mode="aspectFill" style='right:{{star_img_position + idx*37}}rpx' />
        </view>
      </view>
    </view>
    <text class="cls_comment_date">{{item.comment_time}}</text>
    <text class="cls_comment_content">{{item.comment_content}}</text>
  </view>

</view>